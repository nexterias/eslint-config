{
  "name": "@nexterias/eslint-config",
  "version": "1.0.0",
  "description": "ESLint configuration for NEXTERIAS projects",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js"
    },
    "./configs/*": {
      "import": "./src/configs/*.js"
    }
  },
  "main": "./src/index.js",
  "module": "./src/index.js",
  "files": [
    "./src/**/*"
  ],
  "scripts": {
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "lefthook install"
  },
  "prettier": "@nexterias/prettier-config",
  "dependencies": {
    "@eslint/js": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "typescript-eslint": "^7.3.1"
  },
  "devDependencies": {
    "@nexterias/prettier-config": "^1.1.0",
    "eslint": "^8.57.0",
    "lefthook": "^1.6.7",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "eslint": "^8.57.0"
  }
}
